<odoo>
    <data>
        <record id="sales_la_fe_sale_order_fields" model="ir.ui.view">
            <field name="name">sales.la.fe.sale.order.fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <!--<field name="priority">15</field>-->
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">

                   <div class="alert alert-warning" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('lines_qty_empty','=', False)]}">
                       
                       Atención, las siguientes líneas no tienen una cantidad registrada:

                       <bold>

                           <a class="alert-link" role="button">

                               <field name="lines_qty_empty" readonly="True"/>

                           </a>

                       </bold>

                   </div>

                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="check_credit_two" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('check_credit_two','=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="street_sale_order" />
                    <!--<field name="delivery_adress"/>-->
                    <field name="zip_id" />
                    <field name="credit_aproved"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{"no_quick_create":True}</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="method_la_fe_id"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="channel_id"/>
                </xpath>
                <!--<xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="attrs">{'invisible'="1"}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
    
                    <attribute name="invisible">1</attribute>
                </xpath>-->
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="delivery_adress_shipping"/>
                    <field name="zip_shipping_id"/>
                    <!--<field name="state_id" string=" "  placeholder="State"/>
                    <field name="city_id" string=" " placeholder="City"/>
                    <field name="country_id" string=" " placeholder="Country"/>-->
                    <!--<field name="zip"/>-->
                    <!--<field name="street2_sale_order"/>    placeholder="City"-->
                </xpath>
                
                <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="inventory_quantity" readonly="1" force_save="1"/>
                    <field name="virtual_available" readonly="1" force_save="1"/>
                    <!--<field name="last_price1" readonly="1"/>-->
                    <field name="last_price1" readonly="1"/>
                    <!--<field name="last_price2" readonly="1"/>-->
                </xpath>
                <xpath expr="//field[@name='order_line']" position="after">
                    <group>
                        <button name="recompute_products_values" string="Recalcular Valores" type="object" attrs="{'invisible': [('state','not in',('draft','sent'))]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
